@model Clinic8.Models.Dates

@{
    ViewData["Title"] = "Create";
}



<h4>Dates</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="pat_rel" class="control-label">Patient Username</label>
                <select asp-for="pat_rel" class="form-control" asp-items="ViewBag.pat_rel"></select>
            </div>
            <div class="form-group">
                <label asp-for="date_date" class="control-label"> Date Of Appoitment</label>
                <input type="datetime-local" asp-for="date_date" class="form-control" />
                <span asp-validation-for="date_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

