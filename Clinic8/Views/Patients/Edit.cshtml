@model Clinic8.Models.Patient

@{
    ViewData["Title"] = "Edit";

}


<div class="row">
    <div class="col-md-4">
        <form  asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="pat_firstname" class="control-label"></label>
                <input asp-for="pat_firstname" class="form-control" />
                <span asp-validation-for="pat_firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_middlename" class="control-label"></label>
                <input asp-for="pat_middlename" class="form-control" />
                <span asp-validation-for="pat_middlename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_lastname" class="control-label"></label>
                <input asp-for="pat_lastname" class="form-control" />
                <span asp-validation-for="pat_lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_geneder" class="control-label">Gender</label>
                <select asp-for="pat_geneder" class="custom-select">
                    <option value="Male">Male</option>
                    <option value="Femae">Female</option>
                </select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="pat_username" class="form-control" />
                <span asp-validation-for="pat_username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="pat_password" class="form-control" />
                <span asp-validation-for="pat_password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_phone" class="control-label"></label>
                <input asp-for="pat_phone" class="form-control" />
                <span asp-validation-for="pat_phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_birthday" class="control-label"></label>
                <input type="date" asp-for="pat_birthday" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="pat_email" class="form-control" />
                <span asp-validation-for="pat_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_address" class="control-label"></label>
                <input asp-for="pat_address" class="form-control" />
                <span asp-validation-for="pat_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pat_blood_type" class="control-label"></label>
                <input asp-for="pat_blood_type" class="form-control" />
                <span asp-validation-for="pat_blood_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ins_ref" class="control-label"></label>
                <select asp-for="ins_ref" class="form-control" asp-items="ViewBag.ins_ref"></select>
                <span asp-validation-for="ins_ref" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
