@model Clinic8.Models.Doctor
@{
    ViewData["Title"] = "Doctor_Profile";
}

<h1>Doctor_Profile</h1>

<div class="window-wrapper">
    <div class="window" style="width:700px;">

        <div class="body">
            <br />
            <div class="row">

                <div class="col-lg-6" style="font-size:25px;font-family:Calibri;padding-left:40px;padding-top:10px;">
                    <div> <span class="title">Username:</span> @Model.dr_username</div>
                    <div> <span class="title">Email: </span>@Model.dr_email</div>
                    <div> <span class="title">First Name:</span> @Model.dr_firstname</div>
                    <div> <span class="title">Middle Name: </span>  @Model.dr_middlename</div>
                    <div> <span class="title">Last Name:</span> @Model.dr_lastname</div>
                    <div> <span class="title">Phone:</span> @Model.dr_phone</div>
                </div>
                <br />
                <br />

            </div>
            <form asp-action="Edit" method="get">
                <input type="submit" value="Edit" class="btn btn-success float-right" />
            </form>
        </div>
        <div class="footer">


        </div>

    </div>
</div>
